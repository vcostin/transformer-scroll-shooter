{
  "name": "transformer-scroll-shooter",
  "version": "1.6.0",
  "description": "A retro-style side-scrolling shooter game featuring a transforming vehicle with comprehensive audio system and options menu",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "serve": "vite preview",
    "test": "echo 'q' | vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "node tools/code-analyzer.js",
    "analyze:migration": "node tools/focused-analyzer.js",
    "analyze:focused": "node tools/focused-analyzer.js",
    "analyze:full": "node tools/code-analyzer.js",
    "analyze:watch": "nodemon --watch src --ext js --exec \"npm run analyze:migration\"",
    "analyze:migration:watch": "nodemon --watch src --ext js --exec \"npm run analyze:migration\"",
    "analyze:ci": "npm run analyze && npm run analyze:migration",
    "precommit:analyze": "npm run analyze",
    "comment:future": "# Future POJO+Functional refactoring tools:",
    "comment:migration": "# npm run analyze:migration, analyze:migration:entities, analyze:migration:ui"
  },
  "keywords": [
    "game",
    "javascript",
    "html5",
    "canvas",
    "shooter",
    "retro",
    "arcade",
    "transformer",
    "parallax"
  ],
  "author": "vcostin",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.9.0",
    "glob": "^11.0.3",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vcostin/transformer-scroll-shooter.git"
  },
  "homepage": "https://vcostin.github.io/transformer-scroll-shooter/",
  "bugs": {
    "url": "https://github.com/vcostin/transformer-scroll-shooter/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
